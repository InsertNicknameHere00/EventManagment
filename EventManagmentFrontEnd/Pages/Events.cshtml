@page "/Events"
@model EventManagmentFrontEnd.Pages.EventsModel
@{
    ViewData["Title"] = "Events";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Events - Event Management</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="css/styles.css" rel="stylesheet">
    <style>
        .hero-section {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

        .card {
            transition: all 0.3s ease;
            border: none;
            height: 100%;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 25px rgba(0,0,0,0.15);
            }

        .feature-icon {
            margin-bottom: 1rem;
        }

        .nav-link:hover {
            color: #fff !important;
        }

        .event-card .badge {
            position: absolute;
            top: 10px;
            right: 10px;
        }

        .filters {
            background: #f8f9fa;
            border-radius: 10px;
            padding: 1rem;
        }

        .event-meta {
            font-size: 0.9rem;
        }

        .event-description {
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .search-box {
            border-radius: 50px;
        }

        .category-badge {
            border-radius: 50px;
            padding: 0.4rem 0.8rem;
            font-size: 0.8rem;
            margin-right: 5px;
            margin-bottom: 5px;
            transition: all 0.2s;
        }

            .category-badge:hover {
                transform: translateY(-2px);
            }

        .search-button {
            border-radius: 0 50px 50px 0;
        }
    </style>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-calendar-alt me-2"></i>Event Manager
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="/Events">Events</a>
                    </li>
                    <li class="nav-item protected-nav" style="display: none;">
                        <a class="nav-link" href="/CreateEvent">Create Event</a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item auth-nav">
                        <a class="nav-link" href="/Login">Login</a>
                    </li>
                    <li class="nav-item auth-nav">
                        <a class="nav-link" href="/Register">Register</a>
                    </li>
                    <li class="nav-item protected-nav" style="display: none;">
                        <a class="nav-link" href="#" id="logoutBtn">
                            <i class="fas fa-sign-out-alt me-1"></i>Logout
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="container mt-4">
        <div class="row mb-4">
            <div class="col-12">
                <div class="hero-section text-white p-4 p-md-5 rounded">
                    <div class="row align-items-center">
                        <div class="col-lg-8">
                            <h1 class="display-5 mb-3">Discover Amazing Events</h1>
                            <p class="lead mb-4">Find and join events happening in your area or create your own</p>
                            <button class="btn btn-light btn-lg protected-nav" id="createEventBtn" style="display: none;">
                                <i class="fas fa-plus-circle me-2"></i>Create New Event
                            </button>
                            <a href="/Login" class="btn btn-light btn-lg me-2 auth-nav">
                                <i class="fas fa-sign-in-alt me-2"></i>Login to Create Events
                            </a>
                        </div>
                        <div class="col-lg-4 d-none d-lg-block text-center">
                            <i class="fas fa-calendar-check fa-8x opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Search and Filters -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-body p-4">
                        <div class="row g-3">
                            <!-- Location (kept as optional) -->
                            <div class="col-md-9">
                                <div class="input-group">
                                    <span class="input-group-text bg-white"><i class="fas fa-map-marker-alt text-primary"></i></span>
                                    <input type="text" id="locationInput" class="form-control" placeholder="Filter by location...">
                                    <button class="btn btn-primary" type="button" id="locationFilterBtn">
                                        <i class="fas fa-filter"></i> Filter
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Events Container -->
        <div class="row">
            <div class="col-12">
                <h2 class="mb-4">Upcoming Events</h2>
                <div id="eventsContainer">
                    <div class="text-center py-5">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <p class="mt-3 text-muted">Loading events...</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- No Results -->
        <div id="noResults" class="row mt-4" style="display: none;">
            <div class="col-12 text-center py-5">
                <i class="fas fa-calendar-times fa-4x text-muted mb-4"></i>
                <h3 class="text-muted">No events found</h3>
                <p class="text-muted mb-4">Try adjusting your search criteria or create your own event</p>
                <button class="btn btn-primary btn-lg protected-nav" id="createEventBtn2" style="display: none;">
                    <i class="fas fa-plus-circle me-2"></i>Create New Event
                </button>
                <a href="/Login" class="btn btn-primary btn-lg auth-nav">
                    <i class="fas fa-sign-in-alt me-2"></i>Login to Create Events
                </a>
            </div>
        </div>

        <!-- Pagination -->
        <div class="row mt-4">
            <div class="col-12">
                <nav aria-label="Events pagination" id="paginationContainer" style="display: none;">
                    <ul class="pagination justify-content-center">
                        <li class="page-item disabled">
                            <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
                        </li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#">Next</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-light py-4 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5>Event Manager</h5>
                    <p class="mb-0">Your go-to platform for event management and discovery.</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="mb-0">&copy; 2025 Event Manager. All rights reserved.</p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Toast Container -->
    <div class="toast-container position-fixed bottom-0 end-0 p-3">
        <div id="toastMessage" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header">
                <i class="fas fa-info-circle text-primary me-2"></i>
                <strong class="me-auto">Notification</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
            </div>
            <div class="toast-body">
                <!-- Toast message will be inserted here -->
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script src="/js/auth.js"></script>
    <script>
        let currentLocation = '';
        let currentPage = 1;
        let eventsPerPage = 9;
        let allEvents = [];

        function escapeHtml(text) {
            if (!text) return '';
            return text
                .replace(/&/g, "&amp;")
                .replace(/</g, "&lt;")
                .replace(/>/g, "&gt;")
                .replace(/"/g, "&quot;")
                .replace(/'/g, "&#039;");
        }

        function formatDateTime(dateTimeStr) {
            if (!dateTimeStr) return 'Date not specified';

            const options = {
                weekday: 'short',
                year: 'numeric',
                month: 'short',
                day: 'numeric',
                hour: '2-digit',
                minute: '2-digit'
            };

            return new Date(dateTimeStr).toLocaleString('en-US', options);
        }

        document.addEventListener('DOMContentLoaded', function () {
            console.log('Page loaded - checking auth state');
            const token = localStorage.getItem('token');
            console.log('Token exists on page load:', !!token);
            
            initializeAuth();
            setupEventListeners();
            loadEvents();
        });

        function setupEventListeners() {
            document.getElementById('locationFilterBtn').addEventListener('click', function() {
                currentLocation = document.getElementById('locationInput').value;
                currentPage = 1;
                filterEvents();
            });

            document.getElementById('locationInput').addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    currentLocation = document.getElementById('locationInput').value;
                    currentPage = 1;
                    filterEvents();
                }
            });

            const createEventBtn = document.getElementById('createEventBtn');
            if (createEventBtn) {
                createEventBtn.addEventListener('click', function() {
                    window.location.href = '/CreateEvent';
                });
            }

            const createEventBtn2 = document.getElementById('createEventBtn2');
            if (createEventBtn2) {
                createEventBtn2.addEventListener('click', function() {
                    window.location.href = '/CreateEvent';
                });
            }
        }

        async function loadEvents() {
            try {
                let url = `https://localhost:7286/api/Events`;
                const params = new URLSearchParams();

                if (currentLocation) params.append('location', currentLocation);

                if (params.toString()) {
                    url += '?' + params.toString();
                }

                const token = localStorage.getItem('token');

                const headers = {
                    'Content-Type': 'application/json'
                };

                if (token) {
                    headers['Authorization'] = `Bearer ${token}`;
                }

                const response = await fetch(url, { headers });
                const result = await response.json();

                if (result.success) {
                    allEvents = result.data || [];
                    filterEvents();
                } else {
                    showToast(result.message || 'Failed to load events', 'error');
                    document.getElementById('eventsContainer').innerHTML =
                        '<div class="alert alert-danger">Failed to load events. Please try again later.</div>';
                }
            } catch (error) {
                console.error('Error loading events:', error);
                showToast('An error occurred while loading events', 'error');
                document.getElementById('eventsContainer').innerHTML =
                    '<div class="alert alert-danger">Failed to load events. Please try again later.</div>';
            }
        }

        async function createEvent(eventData) {
            const token = localStorage.getItem('token');
            const response = await fetch('https://localhost:7286/api/Events', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'Authorization': `Bearer ${token}`
                },
                body: JSON.stringify(eventData)
            });

            const result = await response.json();
            if (result.success) {
                showToast('Event created successfully!', 'success');
                loadEvents();
            } else {
                showToast(result.message || 'Failed to create event', 'error');
            }
        }

        function filterEvents() {
            let filteredEvents = [...allEvents];

            if (currentLocation) {
                filteredEvents = filteredEvents.filter(event => 
                    event.location.toLowerCase().includes(currentLocation.toLowerCase()));
            }

            if (filteredEvents.length === 0) {
                document.getElementById('eventsContainer').style.display = 'none';
                document.getElementById('noResults').style.display = 'block';
                document.getElementById('paginationContainer').style.display = 'none';
            } else {
                document.getElementById('eventsContainer').style.display = 'block';
                document.getElementById('noResults').style.display = 'none';

                const totalPages = Math.ceil(filteredEvents.length / eventsPerPage);
                const startIndex = (currentPage - 1) * eventsPerPage;
                const endIndex = Math.min(startIndex + eventsPerPage, filteredEvents.length);
                const eventsToDisplay = filteredEvents.slice(startIndex, endIndex);

                displayEvents(eventsToDisplay);

                if (totalPages > 1) {
                    displayPagination(totalPages);
                    document.getElementById('paginationContainer').style.display = 'block';
                } else {
                    document.getElementById('paginationContainer').style.display = 'none';
                }
            }
        }

        function displayEvents(events) {
            const eventsHTML = events.map(event => `
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card shadow-sm h-100 event-card">
                        <div class="card-body">
                            <h5 class="card-title">${escapeHtml(event.name)}</h5>
                            <!-- Removed category badge -->
                            <div class="event-meta mt-3 mb-2">
                                <p class="card-text text-muted mb-1">
                                    <i class="fas fa-calendar me-2"></i>${formatDateTime(event.dateTime)}
                                </p>
                                <p class="card-text text-muted mb-1">
                                    <i class="fas fa-map-marker-alt me-2"></i>${escapeHtml(event.location)}
                                </p>
                                <p class="card-text text-muted mb-1">
                                    <i class="fas fa-user me-2"></i>By ${escapeHtml(event.creatorEmail)}
                                </p>
                            </div>
                            <p class="card-text event-description mb-3">${escapeHtml(event.description).substring(0, 100)}${event.description.length > 100 ? '...' : ''}</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <a href="/EventDetails?id=${event.id}" class="btn btn-primary btn-sm">
                                    <i class="fas fa-eye me-1"></i>View Details
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            `).join('');

            document.getElementById('eventsContainer').innerHTML = `
                <div class="row">${eventsHTML}</div>
            `;
        }

    </script>
</body>
</html>